<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
        <!--<item name="android:showDividers">middle</item>-->
        <!--<item name="android:divider">@android:drawable/divider_horizontal_bright</item>-->
    </style>

    <style name="MainButton" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/yellow_selector_round_corner</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="UnderLineEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:background">@null</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main_text_color_hint</item>
        <item name="android:textColorHint">@color/main_text_color_hint</item>
    </style>
</resources>
